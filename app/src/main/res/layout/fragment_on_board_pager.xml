<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    tools:context=".ui.fragment.onboard.OnBoardPagerFragment">

    <TextView
        android:id="@+id/txtOnBoardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удобство"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtOnBoardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Создавайте заметки в два клика! Записывайте мысли, идеи и важные задачи мгновенно."
        android:textAlignment="center"
        android:textColor="@color/onBoard_text_color"
        android:textSize="18sp" />

</LinearLayout>